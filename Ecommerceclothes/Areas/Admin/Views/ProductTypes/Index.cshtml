@model IEnumerable<Ecommerceclothes.Models.ProductTypes>

@{
    ViewData["Title"] = "Index";
}


<br/><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info"> قائمة بأنواع الملابس المتوفرة</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; نوع منتج جديد</a>
    </div>
</div>
<br />



<table class="table table-hover table-bordered">
    
        <thead>
            <tr>
                <th class="text-info">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.Name)
                    </th>
                    <td align="right">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">تعديل</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">تفاصيل</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
                        @*  <partial name="_TableButtonPartial" model="item.Id" />*@
                    </td>
                </tr>
            }
        </tbody>
    
</table>



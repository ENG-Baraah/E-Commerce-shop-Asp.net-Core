@model IEnumerable<Ecommerceclothes.Models.SpecialTags>

@{
    ViewData["Title"] = "Index";
}

<br />

<div class="row">
    <div class="col-6">
        
        <h2 class="text-info"> قائمة بأسماء الماركات المتوفره</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; ماركة جديدة</a>
    </div>
</div>
<br />

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td align="right">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">تعديل</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">تفاصيل</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
